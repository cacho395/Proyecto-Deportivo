@page
@model Frontend.Pages.CColegio.IndexModel
@{
    ViewData["Title"]="Index Colegio";
}

<h1>Listado de Colegios</h1>
    <p>
        <a asp-page= "Create" class="btn btn-outline-info"> Crear Colegio</a>
    </p>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Razon Social</th>
                <th>Modalidad</th>
                <th>Licencia</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var e in Model.Colegios)
            {
                <tr>
                    <td>@e.RazonSocial</td>
                    <td>@e.Modalidad</td>
                    <td>@e.Licencia</td>
                    <td>
                        <a asp-page="./Edit" class="btn btn-outline-dark" asp-route-id="@e.Id">Edit</a>
                        <a asp-page="./Details" class="btn btn-outline-secondary" asp-route-id="@e.Id">Details</a>
                        <a asp-page="./Delete" class="btn btn-outline-danger" asp-route-id="@e.Id">Delete</a>
                    </td>
                </tr>
            }
            
        </tbody>
    </table>