@page
@model Frontend.Pages.CEntrenador.IndexModel
@{
    ViewData["Title"]="Index Entrenador";
}

<h1>Listado de Entrenadores</h1>
    <p>
        <a asp-page= "Create" class="btn btn-outline-info"> Crear Entrenador</a>
    </p>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Documento</th>
                <th>Nombres</th>
                <th>Apellidos</th>
                <th>Equipo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var e in Model.EntrenadoresV)
            {
                <tr>
                    <td>@e.Documento</td>
                    <td>@e.Nombres</td>
                    <td>@e.Apellidos</td>
                    <td>@e.Equipo</td>
                    <td>
                        <a asp-page="./Edit" class="btn btn-outline-dark" asp-route-id="@e.Id">Edit</a>
                        <a asp-page="./Details" class="btn btn-outline-secondary" asp-route-id="@e.Id">Details</a>
                        <a asp-page="./Delete" class="btn btn-outline-danger" asp-route-id="@e.Id">Delete</a>
                    </td>
                </tr>
            }
            
        </tbody>
    </table>