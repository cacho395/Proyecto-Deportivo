@page
@model Frontend.Pages.CUnidadDeportiva.CreateModel
@{
    ViewData["Title"]="Crear Unidad Deportiva";
}

<h2>@ViewData["Title"]</h2>
<h3 class="text-danger">@ViewData["Error"]</h3>

<div class="form-horizontal">
    <hr /> 
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation.summary= "ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="UnidadDeportiva.Id" />

                <div class="form-group">
                    <label asp-for="UnidadDeportiva.Nombre" class="control-label"></label>
                    <input asp-for="UnidadDeportiva.Nombre" class="form-control"/>
                    <span asp-validation-for="UnidadDeportiva.Nombre" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="UnidadDeportiva.Direccion" class="control-label"></label>
                    <input asp-for="UnidadDeportiva.Direccion"class="form-control"/>
                    <span asp-validation-for="UnidadDeportiva.Direccion" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="UnidadDeportiva.TorneoId" class="control-label">Torneo</label>
                    <select asp-for="UnidadDeportiva.TorneoId" class="form-control">
                        <option value="">--Seleccionar Torneo--</option>
                        @foreach (var und in Model.Torneos)
                        {
                            <option value="@und.Id">@und.Nombre</option>
                        }
                    </select>
                    <span asp-validation-for="UnidadDeportiva.TorneoId" class="text-danger"></span>
                </div>
                <br>
                  <div class="form-group">
                    <input type="submit" value="Crear" class= "btn btn-outline-info"/>
                    <a asp-page="Index" class="btn btn-outline-secondary">Cancelar</a>
                </div>

            </form>
        </div>
    </div>
</div>
