@page
@model Frontend.Pages.CEquipo.IndexModel
@{
    ViewData["title"]="Index de Equipo";
}

<h1>Listado de Equipos</h1>

    <p>
        <a asp-page= "Create" class="btn btn-outline-info"> Crear Equipo</a>
    </p>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Modalidad</th>
                <th>Patrocinador</th>
                <th></th>
               
            </tr>
        </thead>
        <tbody>
            @foreach (var e in Model.EquiposView)
            {
                <tr>
                    <td>@e.Nombre</td>
                    <td>@e.Modalidades</td>
                    <td>@e.Patrocinador</td>
                    <td>
                        <a asp-page="./Edit" class="btn btn-outline-dark" asp-route-id="@e.Id">Edit</a>
                        <a asp-page="./Details" class="btn btn-outline-secondary" asp-route-id="@e.Id">Details</a>
                        <a asp-page="./Delete" class="btn btn-outline-danger" asp-route-id="@e.Id">Delete</a>
                    </td>
                </tr>
            }
            
        </tbody>
    </table>
