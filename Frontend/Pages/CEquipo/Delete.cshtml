@page
@model Frontend.Pages.CEquipo.DeleteModel
@{
    ViewData["Title"]="Eliminar Equipo";
}

<h2>Eliminar Equipo</h2>
@if(ViewData["Error"]==null)
{
    <h3 class="text-danger">Desea eliminar este Equipo?</h3>
}
else
{
    <h3 class="text-danger">@ViewData["Error"]</h3>

}

<div class="form-horizontal">
    <hr /> 
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary= "ModelOnly" class="text-danger"></div>
                              
                <div class="form-group">
                    <label asp-for="Equipo.Nombre" class="control-label"></label>
                    <input asp-for="Equipo.Nombre" class="form-control" readonly/>
                </div>

                <div class="form-group">
                    <label asp-for="Equipo.Modalidades" class="control-label"></label>
                    <input asp-for="Equipo.Modalidades" class="form-control" readonly/>
                </div>

                <div class="form-group">
                    <label asp-for="Equipo.Jugadores" class="control-label"></label>
                    <input asp-for="Equipo.Jugadores" class="form-control"readonly/>
                </div>

                <div class="form-group">
                    <label asp-for="Patrocinador.Nombre" class="control-label">Patrocinador</label>
                    <input asp-for="Patrocinador.Nombre" class="form-control" readonly/>
                </div>
                <br>
                <div class="form-group">
                    <input type="submit" value="Eliminar" class="ms-3 btn btn-outline-danger"/>
                    <a asp-page="Index" class="ms-3 btn btn-outline-secondary">Cancelar</a>
                </div>

            </form>
        </div>
    </div>
</div>


