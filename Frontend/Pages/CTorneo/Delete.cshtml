@page
@model Frontend.Pages.CTorneo.DeleteModel
@{
    ViewData["Title"]="Eliminar Torneo";
}

<h2>@ViewData["Title"]</h2>
@if(ViewData["Error"]==null)
{
    <h3 class="text-danger">Desea eliminar este Torneo?</h3>
}
else
{
    <h3 class="text-danger">@ViewData["Error"]</h3>

}
<div class="form-horizontal">
    <hr /> 
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <input type="hidden" asp-for="Torneo.Id"/>
              
                <div class="form-group">
                    <label asp-for="Torneo.Nombre" class="control-label"></label>
                    <input asp-for="Torneo.Nombre" class="form-control" readonly/>
                </div>

                <div class="form-group">
                    <label asp-for="Torneo.Categoria" class="control-label"></label>
                    <input asp-for="Torneo.Categoria" class="form-control" readonly/>
                </div>

                <div class="form-group">
                    <label asp-for="Torneo.Modalidad" class="control-label"></label>
                    <input asp-for="Torneo.Modalidad" class="form-control" readonly/>
                    <span asp-validation-for="Torneo.Modalidad" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Torneo.FechaInicio" class="control-label"></label>
                    <input asp-for="Torneo.FechaInicio" class="form-control" readonly/>
                    <span asp-validation-for="Torneo.FechaInicio" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Torneo.FechaFin" class="control-label"></label>
                    <input asp-for="Torneo.FechaFin" class="form-control" readonly/>
                    <span asp-validation-for="Torneo.FechaFin" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Torneo.Equipo" class="control-label"></label>
                    <input asp-for="Torneo.Equipo" class="form-control" readonly/>
                    <span asp-validation-for="Torneo.Equipo" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Torneo.Fixture" class="control-label"></label>
                    <input asp-for="Torneo.Fixture" class="form-control" readonly/>
                    <span asp-validation-for="Torneo.Fixture" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Municipio.Nombre" class="control-label">Municipio</label>
                    <input asp-for="Municipio.Nombre" class="form-control" readonly/>
                        
                    <span asp-validation-for="Torneo.MunicipioId" class="text-danger"></span>
                </div>
                <br>
                <div class="form-group">
                    <input type="submit" value="Eliminar" class="ms-3 btn btn-outline-danger"/>
                    <a asp-page="Index" class="ms-3 btn btn-outline-secondary">Cancelar</a>
                </div>

            </form>
        </div>
    </div>
</div>

