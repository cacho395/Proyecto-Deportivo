@page
@model Frontend.Pages.IniciaSesionModel
@{
    Layout="/Pages/Shared/_LayoutInicio.cshtml";
}

<h2 style=color:Blue>Inicio de Sesión</h2>
<h3 class="text-danger">@ViewData["Error"]</h3>

<div class="form-horizontal">
    <hr /> 
    <h3>Torneo Deportivo MinTic 2022</h3>
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary= "ModelOnly" class="text-danger"></div>
                <style>
                    .form-control{
                        background-color: #def;
                    }
                </style>
                <div class="form-group">
                    <label asp-for="Login.Usuario" class="control-label"></label>
                    <input asp-for="Login.Usuario" class="form-control"/>
                    <span asp-validation-for="Login.Usuario" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Login.Password" class="control-label"></label>
                    <input asp-for="Login.Password" class="form-control"/>
                    <span asp-validation-for="Login.Password" class="text-danger"></span>
                </div>
                <br>
                <div class="form-group">
                    <input type="submit" value="Ingresar" class= "btn btn-outline-dark"/>
                    <a asp-page="CrearUsuario" class="ms-1 btn btn-outline-info">Crear Usuario</a>
                </div>

            </form>
        </div>
    </div>
</div>