@page
@model Frontend.Pages.CInscribirEq.DeleteModel
@{
    ViewData["Title"]= "Eliminar Equipo de Torneo";
}

<h2>Eliminando...</h2>
@if(ViewData["Error"]==null)
{
    <h3 class="text-danger">Desea eliminar este Equipo de Torneo?</h3>
}
else
{
    <h3 class="text-danger">@ViewData["Error"]</h3>

}
<div class="form-horizontal">
    <hr /> 
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary= "ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="TorneoEquipo.TorneoId" />
                <input type="hidden" asp-for="TorneoEquipo.EquipoId" />

                <div class="form-group">
                    <label asp-for="Torneo.Nombre" class="control-label"></label>
                    <input asp-for="Torneo.Nombre" class="form-control" readonly/> 
                </div>
                
                <div class="form-group">
                    <label asp-for="Equipo.Nombre" class="control-label"></label>
                    <input asp-for="Equipo.Nombre" class="form-control" readonly/> 
                </div>
                <br>
                <div class="form-group">
               <input type="submit" value="Eliminar" class= "ms-3 btn btn-outline-danger"/>
                    <a asp-page="Index" class="ms-3 btn btn-outline-secondary">Cancelar</a>
                </div>

            </form>
        </div>
    </div>
</div>

