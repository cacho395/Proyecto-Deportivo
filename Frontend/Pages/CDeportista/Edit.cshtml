@page
@model Frontend.Pages.CDeportista.EditModel
@{
    ViewData["Title"]= "Editar Deportista";
}

<h2>Editando Deportista</h2>
<h3 class="text-danger">@ViewData["Error"]</h3>

<div class="form-horizontal">
    <hr /> 
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary= "ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Deportista.Id"/>

                <div class="form-group">
                    <label asp-for="Deportista.Documento" class="control-label"></label>
                    <input asp-for="Deportista.Documento" class="form-control"/>
                    <span asp-validation-for="Deportista.Documento" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Deportista.Nombres" class="control-label"></label>
                    <input asp-for="Deportista.Nombres" class="form-control"/>
                    <span asp-validation-for="Deportista.Nombres" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Deportista.Apellidos" class="control-label"></label>
                    <input asp-for="Deportista.Apellidos" class="form-control"/>
                    <span asp-validation-for="Deportista.Apellidos" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Deportista.Genero" class="control-label">Genero</label>
                    <select asp-for="Deportista.Genero" class="form-control">
                        <option value="">--Seleccionar Genero--</option>
                        <option value="Femenino">Femenino</option>
                        <option value="Masculino">Masculino</option>
                        <option value="Otro">Otro</option>
                    </select>
                    <span asp-validation-for="Deportista.Genero" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Deportista.Modalidad" class="control-label"></label>
                    <input asp-for="Deportista.Modalidad" class="form-control"/>
                    <span asp-validation-for="Deportista.Modalidad" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Deportista.FechaNacimiento" class="control-label"></label>
                    <input asp-for="Deportista.FechaNacimiento" class="form-control"/>
                    <span asp-validation-for="Deportista.FechaNacimiento" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Deportista.Rh" class="control-label"></label>
                    <input asp-for="Deportista.Rh" class="form-control"/>
                    <span asp-validation-for="Deportista.Rh" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Deportista.EPS" class="control-label"></label>
                    <input asp-for="Deportista.EPS" class="form-control"/>
                    <span asp-validation-for="Deportista.EPS" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Deportista.Celular" class="control-label"></label>
                    <input asp-for="Deportista.Celular" class="form-control"/>
                    <span asp-validation-for="Deportista.Celular" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Deportista.EquipoId" class="control-label">Equipo</label>
                    <select asp-for="Deportista.EquipoId" class="form-control">
                        <option value="">--Seleccionar Equipo--</option>
                        @foreach (var dep in Model.Equipos)
                        {
                            <option value="@dep.Id">@dep.Nombre</option>
                        }
                    </select>
                    <span asp-validation-for="Deportista.EquipoId" class="text-danger"></span>
                </div>

                <br>
                <div class="form-group">
                    <input type="submit" value="Editar" class= "ms-3 btn btn-outline-info"/>
                    <a asp-page="Index" class="ms-3 btn btn-outline-secondary">Cancelar</a>
                </div>

            </form>
        </div>
    </div>
</div>