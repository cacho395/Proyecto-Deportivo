@page
@model Frontend.Pages.CEscenario.IndexModel
@{
    ViewData["Title"]="Index de Escenario";
}

<h2>Listado de Escenarios</h2>
    <p>
        <a asp-page= "Create" class="btn btn-outline-info"> Crear Escenarios</a>
    </p>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Espectadores</th>
                <th>Unidad Deportiva</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var e in Model.EscenariosV)
            {
                <tr>
                    <td>@e.Nombre</td>
                    <td>@e.Espectadores</td>
                    <td>@e.UnidadDeportiva</td>

                    <td>
                        <a asp-page="./Edit" class="btn btn-outline-dark" asp-route-id="@e.Id">Edit</a>
                        <a asp-page="./Details" class="btn btn-outline-secondary" asp-route-id="@e.Id">Details</a>
                        <a asp-page="./Delete" class="btn btn-outline-danger" asp-route-id="@e.Id">Delete</a>
                    </td>
                </tr>
            }
            
        </tbody>
    </table>