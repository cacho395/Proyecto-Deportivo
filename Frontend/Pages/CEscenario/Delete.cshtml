@page
@model Frontend.Pages.CEscenario.DeleteModel
@{
    ViewData["Title"]="Eliminar Escenario";
}

<h2>@ViewData["Title"]</h2>
@if(ViewData["Error"]==null)
{
    <h3 class="text-danger">Desea eliminar este Escenario?</h3>
}
else
{
    <h3 class="text-danger">@ViewData["Error"]</h3>

}
<div class="form-horizontal">
    <hr /> 
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation.summary= "ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Escenario.Id" />

                <div class="form-group">
                    <label asp-for="Escenario.Nombre" class="control-label"></label>
                    <input asp-for="Escenario.Nombre" class="form-control" readonly/>
                    <span asp-validation-for="Escenario.Nombre" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Escenario.Espectadores" class="control-label"></label>
                    <input asp-for="Escenario.Espectadores" class="form-control" readonly/>
                    <span asp-validation-for="Escenario.Espectadores" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Escenario.Tipo" class="control-label"></label>
                    <input asp-for="Escenario.Tipo" class="form-control" readonly/>
                </div>

                <div class="form-group">
                    <label asp-for="UnidadDeportiva.Nombre" class="control-label">Unidad Deportiva</label>
                    <input asp-for="UnidadDeportiva.Nombre" class="form-control" readonly/>
                </div>
                <br>
                <div class="form-group">
                    <input type="submit" value="Eliminar" class= "ms-3 btn btn-outline-info"/>
                    <a asp-page="Index" class="ms-3 btn btn-outline-secondary">Cancelar</a>
                </div>

            </form>
        </div>
    </div>
</div>
