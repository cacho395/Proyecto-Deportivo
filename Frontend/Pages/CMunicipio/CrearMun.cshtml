@page
@model Frontend.Pages.CMunicipio.CrearMunModel
@{
    ViewData["Title"]= "Ingresar Municipio";
}

<h2>Ingresar Municipio</h2>
<h3 class="text-danger">@ViewData["Error"]</h3>

<div class="form-horizontal">
    <hr /> 
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary= "ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Municipio.Id"/>

                <div class="form-group">
                    <label asp-for="Municipio.Nombre" class="control-label"></label>
                    <input asp-for="Municipio.Nombre" class="form-control"/>
                    <span asp-validation-for="Municipio.Nombre" class="text-danger"></span>
                </div>
                <br>
                <div class="form-group">
                    <input type="submit" value="Crear" class= "btn btn-outline-info"/>
                    <a asp-page="Index" class="btn btn-outline-secondary">Cancelar</a>
                </div>

            </form>
        </div>
    </div>
</div>

