@page
@model Frontend.Pages.CMunicipio.IndexModel
@{
    ViewData["Title"]="Index Municipio";
}


<h1>Listado de Municipios</h1>
    <p>
        <a asp-page= "CrearMun" class="btn btn-outline-info"> Crear Municipio</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var mun in Model.Municipios)
            {
                <tr>
                    <td>@mun.Id</td>
                    <td>@mun.Nombre</td>
                    <td>
                        <a asp-page="./Edit" class="btn btn-outline-dark" asp-route-id="@mun.Id">Edit</a>
                        <a asp-page="./Details" class="btn btn-outline-secondary" asp-route-id="@mun.Id">Details</a>
                        <a asp-page="./Delete" class="btn btn-outline-danger" asp-route-id="@mun.Id">Delete</a>
                    </td>
                </tr>
            }
            
        </tbody>
    </table>