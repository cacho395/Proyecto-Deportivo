@page
@model Frontend.Pages.CPatrocinador.CreateModel
@{
    ViewData["Title"]="Ingresar Patrocinador";
}

<h2>Ingresar Patrocinador</h2>
<h3 class="text-danger">@ViewData["Error"]</h3>

<div class="form-horizontal">
    <hr /> 
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary= "ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Patrocinador.Documento" class="control-label"></label>
                    <input asp-for="Patrocinador.Documento" class="form-control"/>
                    <span asp-validation-for="Patrocinador.Documento" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Patrocinador.Nombre" class="control-label"></label>
                    <input asp-for="Patrocinador.Nombre" class="form-control"/>
                    <span asp-validation-for="Patrocinador.Nombre" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Patrocinador.Tipo" class="control-label"></label>
                    <Select asp-for="Patrocinador.Tipo" class="form-control">
                        <option value="">-- Seleccione --</option>
                        <option value="Natural">Persona Natural</option>
                        <option value="Juridica">Persona Juridica</option>
                    <span asp-validation-for="Patrocinador.Tipo" class="text-danger"></span>
                    </Select>
                </div>

                <div class="form-group">
                    <label asp-for="Patrocinador.Direccion" class="control-label"></label>
                    <input asp-for="Patrocinador.Direccion" class="form-control"/>
                    <span asp-validation-for="Patrocinador.Direccion" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Patrocinador.Telefono" class="control-label"></label>
                    <input asp-for="Patrocinador.Telefono" class="form-control"/>
                    <span asp-validation-for="Patrocinador.Telefono" class="text-danger"></span>
                </div>
                <br>
                <div class="form-group">
                    <input type="submit" value="Crear" class= "btn btn-outline-info"/>
                    <a asp-page="Index" class="btn btn-outline-secondary">Cancelar</a>
                </div>

            </form>
        </div>
    </div>
</div>
